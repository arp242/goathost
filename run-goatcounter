#!/bin/sh

exec ./goatcounter \
	-prod \
	-sentry $%sentry-goatcounter%$ \
	-domain "goatcounter.com" \
	-domainstatic "static.goatcounter.com" \
	-smtp 'smtp://carpetsmoker%40fastmail.nl:$%fm-key%$@smtp.fastmail.com:587' \
	-pgsql -dbconnect 'user=martin dbname=goatcounter sslmode=disable' \
	"$@" |
	tee "logs/goatcounter.$(date +%Y%m%d)"
